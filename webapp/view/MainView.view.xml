                     <Input
  id="MainView_Input_01"
  showSuggestion="true"
  startSuggestion="2"
  filterSuggests="false"
  suggest=".onSuggest"
  suggestionRows="{
    path: 'ZSB_LOC_LL>/ZZ1_CDS_STORAGE_BINS',
    parameters: { $select: 'Lgnum,Lgpla,Lgtyp', $top: 50 }
  }"
  suggestionItemSelected=".onSuggestionItemSelected"
>
  <suggestionColumns>
    <Column><Label text="{i18n>mainview.warehousenumber}" /></Column>
    <Column><Label text="{i18n>mainview.storageBin}" /></Column>
    <Column><Label text="{i18n>mainview.storagetype}" /></Column>
  </suggestionColumns>
  <suggestionRows>
    <ColumnListItem>
      <Text text="{ZSB_LOC_LL>Lgnum}" />
      <Text text="{ZSB_LOC_LL>Lgpla}" />
      <Text text="{ZSB_LOC_LL>Lgtyp}" />
    </ColumnListItem>
  </suggestionRows>
</Input>




                        </form:content>
                    </form:SimpleForm>
                </content>
            </Panel>
            <Panel id="MainView_Panel_02" class="sapUiResponsiveMargin" backgroundDesign="Transparent" headerText="{i18n>mainview.paneltitle2}">
                <content>
                    <form:SimpleForm id="MainView_SimpleForm_02" backgroundDesign="Transparent"
                    editable="true" layout="ResponsiveGridLayout"
                    labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false"
                    emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0"
                    columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                        <form:content>
                            <Label id="MainView_Label_05" text="{i18n>mainview.warehousenumber}"/>
                            <Text id="MainView_Text_05"/>
                            <Label id="MainView_Label_06" text="{i18n>mainview.storageBin}"/>
                            <Text id="MainView_Text_06"/>
                            <Label id="MainView_Label_07" text="{i18n>mainview.storagetype}"/>
                            <Text id="MainView_Text_07"/>
                        </form:content>
                    </form:SimpleForm>
                </content>
            </Panel>
        </content>
        <footer>
            <OverflowToolbar id="MainView_OverflowToolbar_01">
                <ToolbarSpacer id="MainView_ToolbarSpacer_01"/>
                <Button id="MainView_Button_01" text="{i18n>mainview.printZebra}" type="Accept" icon="sap-icon://print" press="onPrintLabelZebra"/>
                <Button id="MainView_Button_02" text="{i18n>mainview.printpdf}" type="Accept" icon="sap-icon://print" press="onPrintLabel"/>
            </OverflowToolbar>
        </footer>
    </Page>

</mvc:View>
