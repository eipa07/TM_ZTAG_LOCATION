                            <suggestionColumns>
                                <Column id="MainView_Column_01">
                                    <Label id="MainView_Label_02" text="{i18n>mainview.warehousenumber}" wrapping="true"/>
                                </Column>
                                <Column id="MainView_Column_02">
                                    <Label id="MainView_Label_03" text="{i18n>mainview.storageBin}" />
                                </Column>
                                <Column id="MainView_Column_03">
                                    <Label id="MainView_Label_04" text="{i18n>mainview.storagetype}" />
                                </Column>
                            </suggestionColumns>
                            <suggestionRows>
                                <ColumnListItem id="MainView_ColumnListItem_01">
                                    <Text id="MainView_Text_02" text="{LocalModel>Lgnum}" />
